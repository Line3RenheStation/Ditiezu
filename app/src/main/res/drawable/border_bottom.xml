    <item
        android:bottom="1dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/primary_default" />

            <solid android:color="@android:color/transparent" />

            <padding
                android:left="8dp"
                android:right="8dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</layer-list>