<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Ditiezu" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/surface</item>
    </style>

    <style name="Theme.Ditiezu.TabLayout" parent="Theme.Ditiezu">
        <item name="tabBackground">@color/white</item>
        <item name="tabIndicatorColor">@color/primary500</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">@color/primary300</item>
    </style>
</resources>