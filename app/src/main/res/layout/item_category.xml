<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="12dp"
    android:orientation="horizontal"
    android:padding="3dp"
    tools:ignore="SmallSp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_32"
        android:layout_marginVertical="@dimen/_8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/categoryIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/category_title"
            android:src="@color/surface_secondary"
            tools:src="@drawable/guangzhou" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/categoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                tools:text="@string/category_Guangzhou" />

            <TextView
                android:id="@+id/categoryMeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                tools:text="主题: 99999, 帖数: 9999999" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>