<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="@dimen/_8"
        android:background="@drawable/border_radius_8_no_padding"
        android:layout_marginHorizontal="@dimen/_32"
        android:layout_marginVertical="@dimen/_16"
        android:backgroundTint="@color/white"
        android:paddingVertical="@dimen/_8"
        android:paddingHorizontal="@dimen/_16"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_check_24"
            android:contentDescription="@null"
            android:background="@drawable/circle"
            android:backgroundTint="@color/primary500"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/_16"
            android:textSize="14sp"
            tools:text="TIPS CONTENT" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>