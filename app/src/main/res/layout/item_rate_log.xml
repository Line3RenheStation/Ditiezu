<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="36dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/ripple"
    android:backgroundTint="@color/surface">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="168dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/noavatar_middle_rounded"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/authorName"
                android:text="@string/app_name"
                android:textSize="12sp"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_16"
                android:textColor="@color/dark"
                android:layout_margin="@dimen/_8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="168dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/popularity"
                android:text="@string/placeholder_number"
                android:textColor="@color/warning"
                android:textSize="12sp"
                android:ellipsize="end"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_4"
                android:visibility="gone"
                android:gravity="center" />

            <TextView
                android:id="@+id/money"
                android:text="@string/placeholder_number"
                android:textColor="@color/warning"
                android:textSize="12sp"
                android:ellipsize="end"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_4"
                android:visibility="gone"
                android:gravity="center" />

            <TextView
                android:id="@+id/prestige"
                android:text="@string/placeholder_number"
                android:textColor="@color/warning"
                android:textSize="12sp"
                android:ellipsize="end"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_4"
                android:visibility="gone"
                android:gravity="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/reason"
            android:text="@string/require_reason"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:ellipsize="end"
            android:layout_width="@dimen/_128"
            android:layout_height="@dimen/_16"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_8" />
    </LinearLayout>

</LinearLayout>