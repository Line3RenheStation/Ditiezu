<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/skip_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ignore_login"
        android:layout_margin="@dimen/_32"
        android:textAllCaps="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_marginHorizontal="@dimen/_32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/avatar"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_32"
            android:contentDescription="@string/avatar" />

        <EditText
            android:id="@+id/userNameInput"
            android:hint="@string/user_name"
            android:textSize="16sp"
            android:paddingStart="@dimen/_16"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="@dimen/_16"
            android:layout_marginVertical="@dimen/_8"
            android:background="@drawable/border_radius_4_no_padding"
            android:padding="4dp"
            android:autofillHints="username"
            android:inputType="textPersonName"
            tools:ignore="LabelFor,RtlSymmetry" />

        <EditText
            android:id="@+id/userPasswordInput"
            android:hint="@string/password"
            android:textSize="16sp"
            android:paddingStart="@dimen/_16"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="@dimen/_16"
            android:layout_marginVertical="@dimen/_8"
            android:background="@drawable/border_radius_4_no_padding"
            android:padding="4dp"
            android:autofillHints="password"
            android:inputType="textPassword"
            tools:ignore="LabelFor,RtlSymmetry" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_64"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/userQuestionSelect"
                android:layout_width="@dimen/_128"
                android:layout_height="48dp"
                android:layout_marginStart="@dimen/_16"
                android:layout_marginVertical="@dimen/_8" />

            <EditText
                android:id="@+id/userQuestionInput"
                android:hint="@string/answer"
                android:textSize="16sp"
                android:paddingStart="@dimen/_16"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="@dimen/_16"
                android:layout_marginVertical="@dimen/_8"
                android:background="@drawable/border_radius_4_no_padding"
                android:padding="4dp"
                android:autofillHints="message"
                android:inputType="textShortMessage"
                tools:ignore="LabelFor,RtlSymmetry" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/codeWrap"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/codeImage"
                android:layout_width="@dimen/_64"
                android:layout_height="48dp"
                android:layout_marginStart="@dimen/_16"
                android:layout_marginVertical="@dimen/_8"
                android:contentDescription="@string/security_code" />

            <EditText
                android:id="@+id/codeInput"
                android:hint="@string/security_code"
                android:textSize="16sp"
                android:paddingStart="@dimen/_16"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="@dimen/_16"
                android:layout_marginVertical="@dimen/_8"
                android:background="@drawable/border_radius_4_no_padding"
                android:padding="4dp"
                android:autofillHints="securityCode"
                android:inputType="textShortMessage"
                tools:ignore="LabelFor,RtlSymmetry" />
        </LinearLayout>

        <TextView
            android:id="@+id/tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/_4" />

        <LinearLayout
            android:id="@+id/submitLogin"
            android:gravity="center"
            android:background="@drawable/ripple"
            android:layout_width="match_parent"
            android:paddingHorizontal="@dimen/_64"
            android:layout_gravity="center"
            android:layout_height="@dimen/_64"
            android:layout_marginTop="@dimen/_32">

            <ImageView
                android:id="@+id/spinner"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/spinner" />

            <TextView
                android:textSize="18sp"
                android:layout_marginHorizontal="@dimen/_16"
                android:text="@string/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>