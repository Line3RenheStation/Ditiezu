<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/threadItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface"
    android:clickable="false"
    android:focusable="false"
    android:orientation="vertical"
    tools:ignore="SmallSp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_16"
        android:background="@drawable/border_radius_4_no_padding"
        android:elevation="@dimen/_8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/threadPostTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_8"
            android:paddingHorizontal="@dimen/_16"
            tools:text="2020/05/30 13:00" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ripple"
            android:backgroundTint="@color/surface"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_16"
            android:paddingHorizontal="@dimen/_16">

            <TextView
                android:id="@+id/threadTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4"
                android:fontFamily="sans-serif-black"
                android:textSize="18sp"
                android:paddingTop="12dp"
                tools:text="Thread Title" />

            <TextView
                android:id="@+id/threadContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4"
                android:textSize="13sp"
                tools:text="Thread Content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp">

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="@null" />

                <TextView
                    android:id="@+id/threadAuthorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/dark"
                    android:textSize="14sp"
                    tools:text="Author Name" />

                <TextView
                    android:id="@+id/threadMetaInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/grey"
                    android:layout_marginStart="@dimen/_16"
                    android:textSize="10sp"
                    tools:text="Thread Meta" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>