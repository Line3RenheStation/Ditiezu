<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_16"
        android:paddingBottom="@dimen/_16"
        android:paddingStart="@dimen/_16"
        android:paddingEnd="@dimen/_8"
        android:orientation="horizontal"
        app:layout_constraintRight_toLeftOf="@id/pref_item_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/pref_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start" />

        <TextView
            android:id="@+id/pref_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="start" />
    </LinearLayout>

    <TextView
        android:id="@+id/pref_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_16"
        android:paddingBottom="@dimen/_16"
        android:paddingStart="@dimen/_8"
        android:paddingEnd="@dimen/_16"
        android:gravity="end"
        android:layout_gravity="end|center_vertical"
        android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>