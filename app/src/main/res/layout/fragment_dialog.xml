<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bb888888"
        android:orientation="horizontal"
        android:elevation="@dimen/_32" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="@dimen/_32">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_64"
            android:layout_marginTop="@dimen/_128"
            android:padding="@dimen/_16"
            android:backgroundTint="@color/white"
            android:orientation="vertical"
            android:background="@drawable/border_radius_top_4">

            <TextView
                android:id="@+id/dialogName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="@dimen/_8"
                android:layout_gravity="center"
                android:textColor="@color/dark"
                tools:text="Dialog Name" />

            <TextView
                android:id="@+id/dialogDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/grey"
                android:layout_margin="@dimen/_8"
                tools:text="Dialog Description" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_64"
            android:layout_marginBottom="@dimen/_128"
            android:paddingHorizontal="@dimen/_16"
            android:orientation="horizontal"
            android:background="@drawable/border_radius_bottom_4_no_padding"
            android:backgroundTint="@color/white"
            android:weightSum="2">

            <Button
                android:id="@+id/CancelButton"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/_4"
                android:backgroundTint="@color/surface"
                android:textColor="@color/dark"
                android:text="@string/cancel"
                tools:text="Cancel" />

            <Button
                android:id="@+id/ConfirmButton"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/_4"
                android:backgroundTint="@color/surface"
                android:textColor="@color/primary500"
                android:text="@string/confirm"
                tools:text="Confirm" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>