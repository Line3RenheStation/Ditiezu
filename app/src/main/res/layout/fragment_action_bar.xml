<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/_64"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:paddingVertical="@dimen/_8"
        android:gravity="center"
        tools:text="HOME" />

    <EditText
        android:id="@+id/app_search_input"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:drawablePadding="@dimen/_8"
        android:paddingHorizontal="@dimen/_16"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginHorizontal="@dimen/_16"
        android:background="@drawable/border_radius_16_no_padding"
        android:autofillHints="@null"
        android:inputType="text"
        android:hint="@string/search"
        android:textSize="12sp"
        android:layout_marginBottom="@dimen/_16" />

</LinearLayout>