<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/_64"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_8"
    android:paddingTop="@dimen/_32">

    <RadioButton
        android:id="@+id/actionBar_leftButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:button="@null"
        android:layout_margin="@dimen/_16"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/actionBar_rightButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:button="@null"
        android:layout_margin="@dimen/_16"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:paddingVertical="@dimen/_8"
        android:layout_marginTop="@dimen/_8"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="HOME" />

    <EditText
        android:id="@+id/app_search_input"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:drawablePadding="@dimen/_8"
        android:paddingHorizontal="@dimen/_16"
        android:layout_marginTop="@dimen/_8"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginHorizontal="@dimen/_16"
        android:background="@drawable/border_radius_16_no_padding"
        android:autofillHints="@null"
        android:inputType="text"
        android:hint="@string/search"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

</androidx.constraintlayout.widget.ConstraintLayout>