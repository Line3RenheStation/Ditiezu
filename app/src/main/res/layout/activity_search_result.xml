<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchResultActivity"
    android:id="@+id/SearchResultActivity"
    android:layout_marginTop="24dp">

    <include
        android:id="@+id/actoin_bar_layout"
        layout="@layout/fragment_action_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/LoadingMaskContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/shadowMask"
        android:elevation="@dimen/_8"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LoadingAnimation"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:background="@drawable/border_radius_16"
            android:elevation="@dimen/_32"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ProgressBar
                android:layout_width="180dp"
                android:layout_height="96dp"
                android:layout_gravity="center|top"
                android:indeterminate="true"
                android:indeterminateTint="@color/primary500"
                android:paddingTop="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="@string/loading_description"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/threadItemList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/actoin_bar_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:divider="@null"
        android:smoothScrollbar="true"
        tools:context=".ui.ThreadItemFragment"
        tools:listitem="@layout/item_thread_item" />

</androidx.constraintlayout.widget.ConstraintLayout>