<resources>

    <style name="Theme.Ditiezu" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/primary_default</item>
        <item name="colorPrimary">@color/primary_default</item>
        <item name="colorPrimaryDark">@color/primary_light</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/primary_default</item>
        <item name="colorSecondaryVariant">@color/primary_default</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Ditiezu.TabLayout" parent="Theme.Ditiezu">
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabIndicatorColor">@color/primary_default</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">@color/primary_light</item>
    </style>

    <style name="Theme.Ditiezu.AppBarOverlay">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="setting_title" parent="Theme.Ditiezu">
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="setting_value" parent="Theme.Ditiezu">
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="settings_title" parent="Theme.Ditiezu">
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Ditiezu.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
</resources>