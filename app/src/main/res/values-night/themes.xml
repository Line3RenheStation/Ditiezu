<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Ditiezu" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/primary500</item>
        <item name="colorPrimary">@color/primary500</item>
        <item name="colorPrimaryDark">@color/primary700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/primary400</item>
        <item name="colorSecondaryVariant">@color/primary600</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Ditiezu.TabLayout" parent="Theme.Ditiezu">
        <item name="tabBackground">@color/white</item>
        <item name="tabIndicatorColor">@color/primary500</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">@color/primary300</item>
    </style>
</resources>